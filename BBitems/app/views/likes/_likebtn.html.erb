<% if item.liked_by?(current_user) %>
  <%= link_to item.likes.count, item_likes_path(item), method: :delete, remote: true, class:"fas fa-thumbs-up btn btn-danger" %>
<% else %>
  <%= link_to item.likes.count, item_likes_path(item), method: :post, remote: true, class:"far fa-thumbs-up btn btn-info" %>
<% end %>