<div class="container">
  <div class="row">
    <main class="col-8 offset-2 mt-5">

      <h3>ジャンル編集</h3>

      <div class="col-12 mt-4 mb-3">
        <%= form_with model: @genre,url: genre_path, local:true do |f| %>
          <div class="field form-group">
            <%= f.label :ジャンル名 %><br />
            <%= f.text_field :name, class:'form-control' %></div>
            <%= f.submit "変更する", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

    </main>
  </div>
</div>