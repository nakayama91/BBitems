<div class="container">
  <div class="row">

    <!--サイドバー-->
    <%= render 'layouts/side' %>

    <!--メイン部分-->
    <main class="col-9 pl-5">
      <div class="row">

        <div class="col-12">
          <%= link_to "投稿する", new_item_path %>
        </div>

        <!--投稿一覧-->
        <% @items.each do |item| %>
          <div class="col-xs-12 col-md-6 col-xl-3">
            <div class="card" style="float: left; width: 100%;">
              <!--製品画像-->
              <div class="card-img-top">
                <%= link_to item_path(item.id) do %>
                  <%= attachment_image_tag item, :image, height:"120px", width:"100%", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="card-body">
                <!--製品名-->
                <h5 class="card-title text-truncate">
                  <%= link_to item.name, item_path(item.id) %>
                </h5>
                <div class="card-text text-truncate">
                  <!--ジャンル-->
                  <p><!--ジャンルが削除された時用にif-->
                    <% if item.genre.present? %>
                      <%= item.genre.name %>
                    <% else %>
                      <p></p>
                    <% end %>
                  </p>
                  <!--投稿日-->
                  <p><%= I18n.l item.created_at, format: :short %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </main>
  </div>
</div>