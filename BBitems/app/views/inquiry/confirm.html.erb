<div class="container">
  <div class="row">
    <main class="col-8 offset-2">

      <h3>送信内容</h3>

      <%= form_with model: @inquiry, url:inquiry_thanks_path, local:true do |f| %>
        <table class="table col-12 mt-3">
          <tr>
            <th class="col-4">ユーザー名</th>
            <td class="col-8">
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <%= f.submit '送信', class:'btn btn-primary form-group' %>
      <% end %>

    </main>
  </div>
</div>